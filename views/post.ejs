<article class="post">
  <div class="body span9 columns">
    <h2><%- feed.caption %> <small><%- feed.from.name %></small> <small class="easydate"><%- feed.created_at %></small> <a href="http://www.facebook.com/groups/node.js.hk/?id=<%- feed.facebook_id.split("_")[1] %>&amp;notif_t=group_activity" class="plus">+</a></h2>    
    <pre class="content"><%- feed.message %></pre>
    <small class='comment-count'><%= feed.comments.length %> comments</small>
  </div>

  <% if (feed.link) { %>
    <div class="link span8 offset1 columns">
      <% if (feed.picture) { %>
        <img src="<%= feed.picture %>" class="picture"/>
      <% } %>

      <div class="texts">
        <h5><a href="<%= feed.link %>"><%= feed.name %></a> <br/><small><%= feed.caption %></small></h5>
        <p class="content"><%= feed.description ? feed.description : "" %></p>
      </div>        
    </div>
  <% } %>
  
  <div class="comments span8 offset1 columns">
    <% for (idx in feed.comments) { %>
    <%- partial('comment', {comment: feed.comments[idx]}) %>
    <% } %>
  </div>
</article>
